{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "typeRoots": ["src/@types", "node_modules/@types"],
      "removeComments": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "prisma/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }